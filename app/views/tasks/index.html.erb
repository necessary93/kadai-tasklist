<h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>内容</th>
        <th>状態</th>
      </tr>
    </thead>
    <tbody>
      
      <% @tasks.each_with_index do |task, i| %>
        <tr>
          <td><%= link_to i + 1, task %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <%=paginate @tasks %>
<% end %>

<div>
  <%= link_to '新規タスクの作成', new_task_path, class: "btn btn-primary" %>
</div>